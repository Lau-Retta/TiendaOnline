@{
    ViewBag.Title = "Home Page";
}
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>

<!--TARJETAS-->
    <div class="row">
        <div class="col-xl-4 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-9">
                            <h6>Cantidad Clientes</h6>
                            <h6 id="totalcliente"></h6>
                        </div>
                        <div class="col-sm-3">
                            <i class="fas fa-user fa-2x"></i>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <div class="col-xl-4 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-9">
                            <h6>Cantidad Ventas</h6>
                            <h6 id="totalventas"></h6>
                        </div>
                        <div class="col-sm-3">
                            <i class="fas fa-shopping-bag fa-2x"></i>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <div class="col-xl-4 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-9">
                            <h6>Cantidad Productos</h6>
                            <h6 id="totalproductos"></h6>
                        </div>
                        <div class="col-sm-3">
                            <i class="fas fa-boxes fa-2x"></i>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
<!--TABLA-->
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-tags me-1"></i>
            Historial de Ventas
        </div>
        <div class="card-body">
            <form >
                <div class="row align-items-end">
                    <div class="col-sm-2">
                        <label class="form-label"> Fecha de Inicio:</label>
                        <input class="form-control" type="text" id="txtfechainicio" name="txtfechainicio" />
                    </div>
                    <div class="col-sm-2">
                        <label class="form-label"> Fecha Fin:</label>
                        <input class="form-control" type="text" id="txtfechafin" name="txtfechafin" />
                    </div>
                    <div class="col-sm-2">
                        <label class="form-label"> ID Tranasaccion:</label>
                        <input class="form-control" type="text" id="txtIdtran" name="txtIdtran" />
                    </div>


                    <div class="col-sm-2">
                        <div class="d-grid mb-2">
                            <button class="btn btn-primary" id="btnbuscas" type="button"><i class="fas fa-search"></i> Buscar</button>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="d-grid mb-2">
                            <button class="btn btn-success" type="submit"><i class="fas fa-file-excel"></i> Exportar</button>
                        </div>
                    </div>

                </div>
            </form>
            
            <hr />

            <div class="row">
                <div class="col-sm-12">
                    <table id="tabla" class="display cell-border" style="width:100%">
                        <thead>
                            <tr>
                                <th>Fecha Venta</th>
                                <th>Cliente</th>
                                <th>Producto</th>
                                <th>Precio</th>
                                <th>Cantidad</th>
                                <th>Total</th>
                                <th>Id Transaccion</th>
                            </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>
@section scripts{
    
    <script>
        jQuery.ajax({
            url: '@Url.Action("VistaDashBoard", "Home")',
            type: "GET",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
               
                var objeto = data.resultado;

                $("#totalcliente").text(objeto.TotalCliente)
                $("#totalventas").text(objeto.TotalVenta)
                $("#totalproductos").text(objeto.TotalProducto)
            }
           

        })

    </script>

    
    
    
    }